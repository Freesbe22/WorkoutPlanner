@page "/login"
@layout WorkoutPlanner.Components.Layout.LoginLayout

<EditForm EditContext="@_editContext" OnValidSubmit="@SignIn" class="form_container">
    <DataAnnotationsValidator />
    <ValidationSummary class="rounded-lg border-red-700 bg-red-300 p-4 text-wrap max-w-60" />
    <div class="title_container">
        <p class="title">@Localizer["fui_sign_in_default"]</p>
    </div>
    <div class="input_container">
        <label for="email_field" class="input_label">@Localizer["fui_email_hint"]</label>

        <InputText @bind-Value="SignInModel.Email" class="input_field" id="email_field" />
    </div>
    <div class="input_container">
        <label class="input_label" for="password_field">@Localizer["fui_password_hint"]</label>

        <InputText @bind-Value="SignInModel.Password" class="input_field" id="password_field" type="password" />
    </div>

    <button type="submit" class="sign-in_btn">
        <span>@Localizer["fui_sign_in_default"]</span>
    </button>

    <div class="separator">
        <hr class="line">
    </div>

    <p class="text-text-muted pt-2 text-wrap max-w-60">
        @Localizer["fui_trouble_signing_in"]

        <NavLink href="signup" class="underline">@Localizer["fui_title_register_email"]</NavLink>
    </p>
</EditForm>