<div class="absolute top-0 left-0 w-full h-full bg-surface z-50 flex flex-col items-center justify-center transition-all duration-300 ease-in-out @(!IsModalVisible ? "opacity-0 pointer-events-none" : "opacity-100")">
    <div class="relative w-full h-full flex flex-col space-y-2">
        <EditForm Model="@Model" OnValidSubmit="@HandleValidSubmit">
        <!-- Modal header -->
        <div class="flex flex-row items-center px-4 py-2 bg-background w-full text-text">
            <button @onclick="@Toggle" type="button" class="rounded-lg w-8 h-8 inline-flex justify-center items-center stroke-2">
                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                </svg>
            </button>
            <h3 class="text-lg font-semibold grow text-center">
                    @Title
            </h3>
                <button type="submit" class="text-lg font-semibold text-secondary">
                Save
            </button>
        </div>
        <!-- Modal body -->
        <div class="p-4 overflow-y-auto grow overflow-y-auto flex flex-col space-x-2">
                <DataAnnotationsValidator />
                <ValidationSummary />
                @ChildContent
            </div>
        </EditForm>
    </div>
</div>